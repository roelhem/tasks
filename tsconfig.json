{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/**"]
}
